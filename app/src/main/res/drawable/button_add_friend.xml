<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/primaryW"  >
        <shape>
            <gradient
                android:startColor="@color/primaryP"
                android:endColor="@color/primaryP"/>
            <stroke
                android:width="2dp"
                android:color="@color/primaryP" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:color="@color/primaryP"  >
        <shape>
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/primaryP" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:color="@color/primaryP" >
        <shape>
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/primaryP" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>