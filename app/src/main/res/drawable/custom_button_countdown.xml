<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/text3"
                android:endColor="@color/text3"/>
            <stroke
                android:width="3dp"
                android:color="@color/text3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="20dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/text3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="20dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/text3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="20dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>
    </item>
</selector>