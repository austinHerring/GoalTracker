<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/primaryW" >
        <shape>
            <gradient
                android:startColor="@color/text2"
                android:endColor="@color/text2"/>
            <stroke
                android:width="3dp"
                android:color="@color/text2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:color="@color/text2" >
        <shape>
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/text2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:color="@color/text2"  >
        <shape >
            <gradient
                android:startColor="@color/primaryW"
                android:endColor="@color/primaryW"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/text2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>
    </item>
</selector>