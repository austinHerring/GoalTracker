<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.austin.goaltracker.View.GoalsTypeSelectActivity"
    android:orientation="vertical">

    <TextView android:text="@string/text_goal_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="bottom|center_horizontal"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"/>

    <AutoCompleteTextView android:id="@+id/goaltitle" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_title"
        android:inputType="textAutoCorrect" android:maxLines="1"
        android:singleLine="true"
        android:maxLength="25"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primaryP" />

    <TextView android:text="@string/text_goal_type"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|center_horizontal"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.49"
            android:paddingEnd="4dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button_streak_select"
                android:text="@string/buttonFor_streak"
                android:textColor="@color/text2"
                android:background="@drawable/custom_button_streak"
                android:drawableTop="@drawable/streak_flame_small" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.48"
            android:paddingStart="4dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button_countdown_select"
                android:text="@string/buttonFor_countdown"
                android:textColor="@color/text3"
                android:background="@drawable/custom_button_countdown"
                android:drawableTop="@drawable/countdown_flag_small"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
