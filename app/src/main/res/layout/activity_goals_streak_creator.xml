<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.austin.goaltracker.View.GoalsCountdownCreatorActivity"
    android:orientation="vertical">

    <TextView android:text="@string/text_task"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom"
        android:textSize="23sp"
        android:paddingBottom="10dp"
        android:textColor="@color/text3"/>

    <AutoCompleteTextView android:id="@+id/goaltaskStreak" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_task"
        android:inputType="textAutoCorrect"
        android:singleLine="true"
        android:maxLength="35"
        android:textColor="@color/primaryP"
        android:layout_gravity="center_vertical" />

    <TextView android:text="@string/task_increment"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom"
        android:textSize="23sp"
        android:paddingBottom="10dp"
        android:textColor="@color/text3"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goalincrementStreak"
        android:entries="@array/increment_types"
        android:layout_gravity="center_horizontal"/>

    <TextView android:text="@string/task_cheat"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom"
        android:textSize="23sp"
        android:paddingBottom="10dp"
        android:textColor="@color/text3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:text="@string/task_cheatSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryP"
            android:textSize="18sp"/>

        <AutoCompleteTextView android:id="@+id/skipNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/primaryP"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_finish"
        android:id="@+id/buttonfinish"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"/>

</LinearLayout>
